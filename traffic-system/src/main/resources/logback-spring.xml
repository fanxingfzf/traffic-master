<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <!--指定生产环境和测试环境的日志地址-->
    <springProfile name="dev">
        <property name="LOG_HOME" value="E:/学习笔记/项目/星城货运（springboot项目）/源码/logs/"></property>
    </springProfile>

    <springProfile name="prd">
        <property name="LOG_HOME" value="/学习笔记/项目/星城货运（springboot项目）/源码/logs/"></property>
    </springProfile>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!--格式化输出：%d表示日期,%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息-->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n
            </pattern>
        </layout>
    </appender>

    <!--会使用logback配置-->
    <!--配置我们的日志一天为单位生成-->
    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${LOG_HOME}/traffic-system.%d{yyyy-MM-dd}.log
            </FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!--格式化输出：%d表示日期,%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息-->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n
            </pattern>
        </layout>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <root level="info">
        <appender-ref ref="stdout"></appender-ref>
        <appender-ref ref="rollingFile"></appender-ref>
    </root>
</configuration>